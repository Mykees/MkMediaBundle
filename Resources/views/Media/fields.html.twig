{% block singleimage_multimodel_widget %}
    {% stylesheets debug=false output="css/mediabundle.css"
        '@MykeesMediaBundle/Resources/public/css/mediabundle-single-image-widget.css'
    %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <div {{ block('widget_container_attributes') }}>
        <div class="media-widget">
            <input type="text" class="original-value" value="{{ value ? value.id : '' }}" />

            <div class="previous-image-container media-row status-indicator" style="display:none;">
                <img src="" alt=""/>
                <div class="status-title">Previous Image:</div>
                <div class="image-info-text filename"></div>
                <div class="clear"></div>
                <div class="image-info-text uploaded-info"><span class="upload-datetime"></span></div>
            </div>

            {% set current_image_set = value is not null and attribute(value, 'file') is defined %}
            <div class="current-image-container media-row status-indicator" style="{{ current_image_set ? '' : 'display:none' }}">
                {% if current_image_set %}
                        <input type="radio" class="remove-on-ajax-complete" id="{{ value.name }}" name="{{full_name}}" value="{{ value.id }}" checked="checked" />
                        <img class="current-image" src="/img/{{ asset(value.file) }}" alt="{{ value.name }}"/>
                    {% else %}
                        {# Empty for javascript #}
                        <img class="current-image" src="" alt=""/>
                {% endif %}
                <div class="current-image-text ">
                    <div class="status-title">Current Image:</div>
                    <div class="image-info-text filename">{{ value ? value.name : '' }}</div>
                    <div class="clear"></div>
                    <div class="image-info-text uploaded-info"><span class="upload-datetime">01/01/15 11:11</span></div>
                </div>
                <input type="text" class="last-set-value" value="{{ value ? value.id : '' }}" />

            </div>

            <div class="media-row upload-area status-indicator">
                {{ iframe_basic_uploader(form.parent.vars.value) }}
            </div>

            {% if multimodel is defined and multimodel == true and models is defined %}
                <select name="{{ label }}-model-select">
                {% for model in models %}
                    <option value="{{ model }}" name="{{ model }}">{{ model }}</option>
                {% endfor %}
                </select>
            {% else %}
                <div class="showing-model-display"></div>
            {% endif %}
            
            <div class="media-selection">
                <div style="display:none;" class="media-selection-loading">
                    -- LOADING --
                </div>
                <div class="clear"></div>
                <div class="media-selection-container">
                </div>
            </div>

        </div>
    </div>

    {% javascripts debug=false output="js/mediabundle.js"
        '%kernel.root_dir%/../vendor/components/jquery/jquery.min.js'
        '@MykeesMediaBundle/Resources/public/js/mediabundle-single-image-widget.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}


{% endblock singleimage_multimodel_widget %}
