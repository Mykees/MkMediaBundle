{% block singleimage_multimodel_widget %}
    {% javascripts debug=false output="js/mediabundle.js"
        '@MykeesMediaBundle/Resources/public/js/mediabundle-single-image-widget.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% stylesheets debug=false output="css/mediabundle.css"
        '@MykeesMediaBundle/Resources/public/css/mediabundle-single-image-widget.css'
    %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <div {{ block('widget_container_attributes') }}>
        <div class="media-widget">
            <div class="label">
                {{ form.vars.label }}
            </div>

            <div class="previous-image-container media-row" style="display:none;">
                <img src="" alt=""/>
            </div>

            {% set current_image_set = value is not null and attribute(value, 'file') is defined %}
            <div class="current-image-container media-row" style="{{ current_image_set ? '' : 'display:none' }}">
                {% if current_image_set %}
                        <img class="current-image" src="/img/{{ asset(value.file) }}" alt="{{ value.name }}"/>
                    {% else %}
                        {# Empty for javascript #}
                        <img class="current-image" src="" alt=""/>
                {% endif %}
            </div>

        </div>
    </div>

{% endblock singleimage_multimodel_widget %}
